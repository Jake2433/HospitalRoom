<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002060"
    tools:context="com.example.kyb24.hospitalroom.MainActivity">

    <EditText
        android:id="@+id/Edit_ID"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Edit_PW"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/Edit_PW"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Please enter your ID"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <ImageButton
        android:id="@+id/Btn_SignIn"
        android:background="#00000000"
        app:srcCompat="@drawable/signin"
        android:layout_width="132dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/Btn_SignUp"
        android:layout_marginEnd="13dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="9dp"
        android:layout_toLeftOf="@+id/Btn_SignUp"
        android:layout_toStartOf="@+id/Btn_SignUp"
        android:onClick="CliSignIn"
        android:text="로그인"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Btn_SignUp"
        app:layout_constraintTop_toBottomOf="@+id/Edit_PW"
        tools:layout_editor_absoluteX="67dp" />

    <ImageButton
        android:id="@+id/Btn_SignUp"
        android:background="#00000000"
        app:srcCompat="@drawable/signup"
        android:layout_width="132dp"
        android:layout_height="41dp"
        android:layout_alignEnd="@+id/Edit_PW"
        android:layout_alignRight="@+id/Edit_PW"
        android:layout_below="@+id/Edit_PW"
        android:layout_marginRight="57dp"
        android:layout_marginTop="9dp"
        android:onClick="CliSignUp"
        android:text="회원가입"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_PW"
        tools:layout_editor_absoluteX="222dp" />

    <EditText
        android:id="@+id/Edit_PW"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/Edit_ID"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_ID" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="62dp"
        app:layout_constraintTop_toBottomOf="@+id/Btn_SignUp"
        app:layout_constraintHorizontal_bias="0.536" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="409dp"
        android:layout_height="276dp"
        app:srcCompat="@drawable/hospital"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="62dp"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="50dp"
        android:orientation="horizontal" />


</android.support.constraint.ConstraintLayout>
