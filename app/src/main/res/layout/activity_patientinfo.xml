<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002060">

    <TableRow>
        <LinearLayout>
            <TextView
                android:id="@+id/textView4"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:text="성함"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_marginLeft="120dp"
                android:id="@+id/ET_NameP"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:text="TextView" />
        </LinearLayout>
    </TableRow>

    <TableRow>
        <LinearLayout>
            <TextView
                android:id="@+id/textView6"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="16dp"/>

            <EditText
                android:id="@+id/ET_SexP"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
    </TableRow>

    <TableRow>
        <LinearLayout>
            <TextView
                android:id="@+id/textView5"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:text="출생"/>

            <EditText
                android:id="@+id/ET_BirthP"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="date"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:onClick="CliBirthP"/>
        </LinearLayout>
    </TableRow>

    <TableRow>
        <LinearLayout>
            <TextView
                android:id="@+id/textView7"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보호자\n연락처"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp" />

            <EditText
                android:id="@+id/ET_PhoneP"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_width="270dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="phone"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
    </TableRow>

   <TableRow>
       <LinearLayout>
           <TextView
               android:id="@+id/textView8"
               android:textColor="#ffffff"
               android:textColorHint="#ffffff"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="16dp"
               android:text="입원"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_marginTop="15dp"/>

           <EditText
               android:id="@+id/ET_StartP"
               android:textColor="#ffffff"
               android:textColorHint="#ffffff"
               android:layout_width="300dp"
               android:layout_height="45dp"
               android:ems="10"
               android:inputType="date"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="10dp"/>
       </LinearLayout>
   </TableRow>

    <TableRow>
        <LinearLayout>
            <TextView
                android:id="@+id/textView9"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="퇴원"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp" />

            <EditText
                android:id="@+id/ET_EndP"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="date"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp" />
        </LinearLayout>
    </TableRow>

    <TableRow>
        <LinearLayout>
            <TextView
                android:id="@+id/textView10"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="주의\n사항"
                android:layout_marginTop="15dp" />

            <EditText
                android:id="@+id/ET_MemoP"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_width="300dp"
                android:layout_height="158dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp" />
        </LinearLayout>
    </TableRow>

    <TableRow android:layout_gravity="center">
    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/Btn_addtoDB"
        app:srcCompat="@drawable/finished_checkin"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="입실완료"
        android:onClick="insert"/>
    </TableRow>
</TableLayout>